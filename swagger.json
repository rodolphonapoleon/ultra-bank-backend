{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Ultra Bank",
    "description": "The Ultra Bank apllication API",
    "contact": { "email": "rnapoleon@imajine.ht" },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "",
  "basePath": "/",
  "tags": [
    {
      "name": "Bank",
      "description": "API for the banking app routes"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],

  "paths": {
    "/account/all": {
      "get": {
        "tags": ["Users"],
        "summary": "Get all users information",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/account/findOne/{email}": {
      "parameters": [
        {
          "name": "email",
          "in": "path",
          "required": true,
          "description": "Email of user that we want information for",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["Users"],
        "summary": "Get information for a specific user",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/account/create/{name}/{email}": {
      "post": {
        "tags": ["Users"],
        "summary": "Create user account",
        "description": "",
        "consumes": ["multipart/form-data"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "description": "Name of the user",
            "required": true,
            "type": "string"
          },
          {
            "name": "email",
            "in": "path",
            "description": "Email of the user",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": { "$ref": "#/definitions/User" }
          }
        },
        "security": [{ "idToken": [] }]
      }
    },
    "/account/update/{email}/{amount}": {
      "put": {
        "tags": ["Users"],
        "summary": "Update balance / Make a deposit or withdraw",
        "description": "",
        "consumes": ["multipart/form-data"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "email",
            "in": "path",
            "description": "Email of the user",
            "required": true,
            "type": "string"
          },
          {
            "name": "amount",
            "in": "path",
            "description": "Amount to update the balance",
            "required": true,
            "type": "number"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": { "$ref": "#/definitions/User" }
          }
        },
        "security": [{ "idToken": [] }]
      }
    },
    "/account/edit/{email}/{user}": {
      "put": {
        "tags": ["Users"],
        "summary": "Update user profle",
        "description": "",
        "consumes": ["multipart/form-data"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "email",
            "in": "path",
            "description": "Email of the user",
            "required": true,
            "type": "string"
          },
          {
            "name": "user",
            "in": "path",
            "description": "Updated user information",
            "required": true,
            "type": "User"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": { "$ref": "#/definitions/User" }
          }
        },
        "security": [{ "idToken": [] }]
      }
    },
    "/account/createtransaction/{transaction}": {
      "post": {
        "tags": ["Transactions"],
        "summary": "Create a transaction",
        "description": "",
        "consumes": ["multipart/form-data"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "transaction",
            "in": "path",
            "description": "Transaction",
            "required": true,
            "type": "Transaction"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": { "$ref": "#/definitions/Transaction" }
          }
        },
        "security": [{ "idToken": [] }]
      }
    },
    "/account/findTransactions/{email}": {
      "parameters": [
        {
          "name": "email",
          "in": "path",
          "required": true,
          "description": "Email of user that we want to get transactions for",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["Transactions"],
        "summary": "Get all transactions for a specific user in the system",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Transaction"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string" },
        "accountNumber": { "type": "string" },
        "balance": { "type": "integer" },
        "gender": { "type": "string" },
        "dob": { "type": "string" },
        "phoneNumber": { "type": "string" },
        "address": { "type": "string" }
      },
      "xml": { "name": "User" }
    },
    "Transaction": {
      "type": "object",
      "properties": {
        "email": { "type": "string" },
        "date": { "type": "string" },
        "type": { "type": "string" },
        "amount": { "type": "string" },
        "currentBalance": { "type": "integer" }
      },
      "xml": { "name": "User" }
    }
  }
}
